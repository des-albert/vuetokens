{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "extends": ["eslint:recommended", "plugin:vue/recommended" ],
  "plugins": ["@vue"],
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "ecmaVersion": 2016
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      2,
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-console": 0,
    "semi": [
      "error",
      "always"
    ]
  }
}
